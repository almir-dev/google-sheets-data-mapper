{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "noEmit": false
  },
  "include": [
    "src",
    "node_modules/gas-types-detailed/google-apps-script.spreadsheet.d.ts",
    "node_modules/gas-types-detailed/google-apps-script.script.d.ts",
    "node_modules/gas-types-detailed/google-apps-script.charts.d.ts",
    "node_modules/gas-types-detailed/google-apps-script.url-fetch.d.ts",
    "node_modules/gas-types-detailed/google-apps-script.html.d.ts"
  ]
}
